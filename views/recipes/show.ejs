<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include ('../partials/head.ejs') %>
</head>

<body>
  <nav>
    <%- include ('../partials/nav.ejs') %>
  </nav>
  <div class="container">
    <h3><%= recipe.name  %></h3>
    
      <label for="instruction">Directions:</label>
      <p name="instruction" id="instruction"><%= recipe.instruction %> </p>
     
      <h5>Ingredients</h5>
        <% for (let i=0; i<ingred.length; i++) { %>
        <p><%=recipe.recipeingredient[i].measureqty%> <%=recipe.recipeingredient[i].measuretype%> <%=ingred[i][0].name%></p>
        <% } %>
       </div>
</body>

</html>