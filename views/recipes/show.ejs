<body>
  <nav>
    <%- include ('../partials/nav.ejs') %>
  </nav>
  <div class="container" id="recipeshow">
    <h3><%= recipe.name  %></h3>
    <label for="instruction">Directions:</label>
    <p><%= recipe.instruction %> </p>
    <label>Ingredients</label>
    <% for (let i=0; i<ingred.length; i++) { %>
    <p><%=recipe.recipeingredient[i].measureqty%> <%=recipe.recipeingredient[i].measuretype%> <%=ingred[i][0].name%></p>
    <% } %>
    <form action="/recipes/<%=recipe.id%>?_method=DELETE" method="POST">
      <input type="submit" value="Delete Recipe" />
    </form>
  </div>
</body>